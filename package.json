{
    "name": "sinoval",
    "type": "module",
    "version": "1.0.2",
    "description": "A simple and easy-to-use node.js validator",
    "author": "Erwin Stone <erwinstone@pm.me>",
    "license": "MIT",
    "homepage": "https://github.com/erwinstone/sinoval#readme",
    "repository": "git@github.com:erwinstone/sinoval.git",
    "bugs": {
        "url": "https://github.com/erwinstone/sinoval/issues"
    },
    "keywords": [
        "validator",
        "validation",
        "laravel validator",
        "simple validator",
        "express validator",
        "fastify validator",
        "async validator"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist && tsc -d --emitDeclarationOnly src/index.ts --declarationDir dist && temon src/index.ts --build dist/index.js",
        "test": "vitest"
    },
    "devDependencies": {
        "@antfu/eslint-config": "0.35.3",
        "@types/node": "18.14.2",
        "esbuild": "0.17.10",
        "eslint": "8.35.0",
        "nodemon": "2.0.20",
        "temon": "1.2.0",
        "typescript": "4.9.5",
        "vitest": "0.29.1"
    }
}
